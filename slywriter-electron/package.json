        "to": "premium_animations.py"
      },
      {
        "from": "../premium_notifications.py",
        "to": "premium_notifications.py"
      },
      {
        "from": "../feature_spotlight.py",
        "to": "feature_spotlight.py"
      },
      {
        "from": "../mousewheel_scroll.py",
        "to": "mousewheel_scroll.py"
      },
      {
        "from": "../purple_button_theme.py",
        "to": "purple_button_theme.py"
      },
      {
        "from": "../sly_splash.py",
        "to": "sly_splash.py"
      },
      {
        "from": "../tab_overlay.py",
        "to": "tab_overlay.py"
      },
      {
        "from": "../modern_notebook.py",
        "to": "modern_notebook.py"
      },
      {
        "from": "../modern_ui_2025.py",
        "to": "modern_ui_2025.py"
      },
      {
        "from": "../grammarly_simulator.py",
        "to": "grammarly_simulator.py"
      },
      {
        "from": "../telemetry_postgres.py",
        "to": "telemetry_postgres.py"
      },
      {
        "from": "../telemetry_endpoints.py",
        "to": "telemetry_endpoints.py"
      },
      {
        "from": "../websocket_typing.py",
        "to": "websocket_typing.py"
      },
      {
        "from": "../settings_sync.py",
        "to": "settings_sync.py"
      },
      {
        "from": "../requirements.txt",
        "to": "requirements.txt"
      },
      {
        "from": "../install_typing_deps.bat",
        "to": "install_typing_deps.bat"
      },
      {
        "from": "../config.json",
        "to": "config.json"
      },
      {
        "from": "../usage_data.json",
        "to": "usage_data.json"
      },
      {
        "from": "../typing_log.txt",
        "to": "typing_log.txt"
      },
      {
        "from": "../hotkeys.json",
        "to": "hotkeys.json"
      },
      {
        "from": "../plan_data.json",
        "to": "plan_data.json"
      },
      {
        "from": "../word_data.json",
        "to": "word_data.json"
      },
      {
        "from": "../analytics.json",
        "to": "analytics.json"
      },
      {
        "from": "../users.json",
        "to": "users.json"
      },
      {
        "from": "../license_manager.py",
        "to": "license_manager.py"
      },
      {
        "from": "version.js",
        "to": "version.js"
      }
    ],
    "publish": {
      "provider": "github",
      "owner": "slywriterapp",
      "repo": "slywriter-releases",
      "releaseType": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "squirrel",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "SlyWriter"
    },
    "squirrelWindows": {
      "iconUrl": "https://raw.githubusercontent.com/slywriterapp/slywriterapp/main/slywriter-electron/assets/icon.ico",
      "useAppIdAsId": true,
      "msi": false
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./assets/icon.ico",
      "uninstallerIcon": "./assets/icon.ico",
      "installerHeader": "./assets/installerHeader.bmp",
      "installerSidebar": "./assets/installerSidebar.bmp",
      "installerHeaderIcon": "./assets/icon.ico",
      "license": "../license.txt",
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "SlyWriter",
      "runAfterFinish": true,
      "deleteAppDataOnUninstall": false,
      "artifactName": "SlyWriter-Setup-${version}.${ext}",
      "displayLanguageSelector": false,
      "installerLanguages": ["en_US"],
      "menuCategory": true,
      "packElevateHelper": true,
      "warningsAsErrors": false,
      "unicode": true,
      "preCompressedFileExtensions": [".mp4", ".webm", ".png", ".jpg"],
      "warningsAsErrors": false
    }
  }
}
