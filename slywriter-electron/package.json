{
  "name": "slywriter-desktop",
  "version": "2.0.0",
  "description": "Premium AI typing assistant with system-wide overlay",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --win"
  },
  "keywords": [
    "typing",
    "ai",
    "automation",
    "desktop"
  ],
  "author": "SlyWriter",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.slywriter.desktop",
    "productName": "SlyWriter",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
